<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.meowmusicplayer">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-sdk
        tools:overrideLibrary="android.support.v7.appcompat,android.support.graphics.drawable"
        />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NowPlayingActivity"
            android:label="@string/nowPlaying"/>
        <activity android:name=".SongActivity"
            android:label="@string/tab_text_1"/>
        <activity android:name=".ArtistActivity"
            android:label="@string/tab_text_2"/>
        <activity android:name=".AlbumActivity"
            android:label="@string/tab_text_3"/>

    </application>
</manifest>